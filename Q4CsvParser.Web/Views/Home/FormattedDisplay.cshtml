@model Q4CsvParser.Web.Models.FormattedDisplayModel

@{
    ViewBag.Title = "Formatted Display";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Data from <strong>@Model.OriginalFileName</strong></h2>

@* TODO Fill in the logic to create a view here *@

@if (Model.CsvTable.Rows.Count() > 0)
{
    <table cellpadding="0" cellspacing="0" border="1">
        @if (Model.CsvTable.HeaderRow.Columns.Count() > 0)
        {
            <tr>
                @foreach (var headerColumn in Model.CsvTable.HeaderRow.Columns)
                {
                    <th>@headerColumn.Value</th>
                }
            </tr>
        }
        @foreach (var dataRow in Model.CsvTable.Rows)
        {
            <tr>
                @foreach (var rowColumn in dataRow.Columns)
                {
                    <td>@rowColumn.Value</td>
                }
            </tr>
        }
    </table>
}